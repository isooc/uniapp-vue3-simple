{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
    "pages": [
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "南山民企之窗"
            }
        },
        {
            "path": "pages/entrance/index"
        }

    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#3cc51f",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "list": [{
                "pagePath": "pages/index/index",
                "iconPath": "static/tabbar/index.png",
                "selectedIconPath": "static/tabbar/indexSelected.png",
                "text": "门户"
            },
            {
                "pagePath": "my/index/index",
                "iconPath": "static/tabbar/class.png",
                "selectedIconPath": "static/tabbar/classSelected.png",
                "text": "我的"
            }
        ]
    },
    "subPackages": [
        {
            "root": "my",
            "pages": [{
                "path": "index/index",
                "style": {
                    "navigationBarTitleText": "我的"
                }
            }]
        },
        {
            "root": "test",
            "pages": [
                {
                    "path": "index/index",
                    "style": {
                        "navigationBarTitleText": "测试"
                    }
                },
                {
                    "path": "datePicker/index",
                    "style": {
                        "navigationBarTitleText": "日期选择组件"
                    }
                }
            ]
        }
    ]
}